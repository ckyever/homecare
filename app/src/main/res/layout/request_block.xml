<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/usernameRequest"
        android:textColor="#0000FF"
        android:textAlignment="textStart"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/spacingRequest"
        android:textColor="@android:color/black"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/usernameRequest"
        app:layout_constraintBottom_toTopOf="@id/requestEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentStart="true"
        android:paddingTop="5sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:layout_marginBottom="5sp"
        android:background="@android:color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/requestEmail"
        android:textColor="@android:color/black"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spacingRequest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentStart="true"
        android:paddingTop="5sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:layout_marginBottom="5sp"
        android:background="@android:color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/acceptRequestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:text="Accept"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/usernameRequest" />

    <Button
        android:id="@+id/declineRequestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="36dp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:text="Decline"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/usernameRequest" />

</android.support.constraint.ConstraintLayout>

