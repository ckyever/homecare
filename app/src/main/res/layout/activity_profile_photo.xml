<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/profileImageText"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:text="Profile Image"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/selectImage"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Select profile image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:onClick="onClick"
        android:paddingStart="10sp"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        app:layout_constraintBottom_toTopOf="@id/confirmChange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/selectImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_marginEnd="10sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:outlineProvider="none"
        app:srcCompat="@android:drawable/ic_media_play"
        app:layout_constraintEnd_toEndOf="@id/selectImage"
        app:layout_constraintTop_toTopOf="@id/selectImage"
        app:layout_constraintBottom_toBottomOf="@id/selectImage" />

    <TextView
        android:id="@+id/confirmChange"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="confirm change"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:onClick="onClick"
        android:paddingStart="10sp"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/confirmChangeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_marginEnd="10sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:outlineProvider="none"
        app:srcCompat="@android:drawable/ic_media_play"
        app:layout_constraintEnd_toEndOf="@id/confirmChange"
        app:layout_constraintTop_toTopOf="@id/confirmChange"
        app:layout_constraintBottom_toBottomOf="@id/confirmChange" />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toBottomOf="@id/profileImageText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/selectImage"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:indeterminate="true"
        app:layout_constraintStart_toStartOf="@id/profileImage"
        app:layout_constraintEnd_toEndOf="@id/profileImage"
        app:layout_constraintTop_toTopOf="@id/profileImage"
        app:layout_constraintBottom_toBottomOf="@id/profileImage"/>

    <TextView
        android:id="@+id/progressBarMsg"
        android:text="Loading"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/profileImage"
        app:layout_constraintEnd_toEndOf="@id/profileImage"
        app:layout_constraintTop_toBottomOf="@id/progressBar"/>

    <Button
        android:id="@+id/optionHelp"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:background="#FF0000"
        android:onClick="onClick"
        android:text="Help Me!"
        android:enabled="false"
        android:visibility="invisible"
        android:textColor="#FFFF00"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/profileImageText"
        app:layout_constraintTop_toTopOf="@id/profileImageText"
        app:layout_constraintBottom_toBottomOf="@id/profileImageText"/>


</android.support.constraint.ConstraintLayout>