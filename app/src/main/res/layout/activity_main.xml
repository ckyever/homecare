<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/mapButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:paddingTop="50dp"
                android:paddingBottom="10dp"
                android:text="Tracking"
                android:textSize="18sp"
                android:drawableTop="@drawable/ic_map" />

            <Button
                android:id="@+id/optionContacts"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:onClick="onClick"
                android:paddingTop="50dp"
                android:paddingBottom="10dp"
                android:text="Contacts"
                android:textAlignment="center"
                android:textSize="18sp"
                android:drawableTop="@drawable/ic_contacts" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/friendRequests"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:paddingTop="50dp"
                android:paddingBottom="10dp"
                android:text="friend requests"
                android:textAlignment="center"
                android:textSize="18sp"
                android:drawableTop="@drawable/ic_friend_requests" />

            <Button
                android:id="@+id/contactsUpdate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:paddingTop="50dp"
                android:paddingBottom="10dp"
                android:text="Add Contacts"
                android:textAlignment="center"
                android:textSize="18sp"
                android:drawableTop="@drawable/ic_add_contacts" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/options"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:paddingTop="50dp"
                android:paddingBottom="10dp"
                android:text="Options"
                android:textAlignment="center"
                android:textSize="18sp"
                android:drawableTop="@drawable/ic_options" />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:paddingTop="50dp"
                android:paddingBottom="10dp"
                android:text="Logout"
                android:textAlignment="center"
                android:textSize="18sp"
                android:drawableTop="@drawable/ic_logout" />

        </LinearLayout>

        <!--
        <Button
            android:id="@+id/optionScreenshare"
            android:layout_width="128dp"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_button"
            android:onClick="onClick"
            android:text="Share Screen" />
            -->

        <Button
            android:id="@+id/optionHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#FF0000"
            android:enabled="false"
            android:onClick="onClick"
            android:text="Help Me!"
            android:textColor="#FFFF00"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>