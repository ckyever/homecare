<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="116dp"
        android:layout_height="96dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176" />

    <Button
        android:id="@+id/trackingButton"
        android:layout_width="128dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:background="#ACB9E8"
        android:text="Tracking"
        app:layout_constraintBottom_toTopOf="@id/mapButton"
        app:layout_constraintStart_toStartOf="@id/optionContacts"
        app:layout_constraintEnd_toEndOf="@id/optionContacts"
        app:layout_constraintVertical_bias="0.575" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="128dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:background="#ACB9E8"
        android:text="Map"
        app:layout_constraintBottom_toTopOf="@id/optionContacts"
        app:layout_constraintEnd_toEndOf="@id/optionContacts"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/optionContacts" />

    <Button
        android:id="@+id/optionHelp"
        android:layout_width="128dp"
        android:layout_height="56dp"
        android:background="#ACB9E8"
        android:onClick="onClick"
        android:text="Help"
        app:layout_constraintTop_toTopOf="@id/mapButton"
        app:layout_constraintBottom_toBottomOf="@id/mapButton"
        app:layout_constraintEnd_toEndOf="@id/optionScreenshare"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/optionScreenshare"
        app:layout_constraintVertical_bias="0.953" />

    <Button
        android:id="@+id/contactsUpdate"
        android:layout_width="128dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="#ACB9E8"
        android:text="Add/Remove Contacts"
        app:layout_constraintStart_toStartOf="@id/optionContacts"
        app:layout_constraintEnd_toEndOf="@id/optionContacts"
        app:layout_constraintTop_toBottomOf="@id/optionContacts"
        app:layout_constraintVertical_bias="0.966" />

    <Button
        android:id="@+id/friendRequests"
        android:layout_width="128dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:background="#ACB9E8"
        android:text="friend requests"
        app:layout_constraintStart_toStartOf="@id/optionScreenshare"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintEnd_toEndOf="@id/optionScreenshare"
        app:layout_constraintBottom_toTopOf="@id/optionHelp"/>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="128dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#ACB9E8"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="@id/optionScreenshare"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/optionScreenshare"
        app:layout_constraintTop_toTopOf="@id/contactsUpdate"
        app:layout_constraintTop_toBottomOf="@id/contactsUpdate"
        app:layout_constraintBottom_toBottomOf="@id/contactsUpdate"/>

    <Button
        android:id="@+id/optionContacts"
        android:layout_width="128dp"
        android:layout_height="56dp"
        android:layout_marginBottom="108dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="50dp"
        android:background="#ACB9E8"
        android:onClick="onClick"
        android:text="Contacts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/optionScreenshare"
        android:layout_width="128dp"
        android:layout_height="56dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="16dp"
        android:background="#ACB9E8"
        android:fontFamily="@font/roboto_medium"
        android:onClick="onClick"
        android:text="Screenshare"
        app:layout_constraintTop_toTopOf="@id/optionContacts"
        app:layout_constraintBottom_toBottomOf="@id/optionContacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.681"
        app:layout_constraintStart_toEndOf="@id/optionContacts"
        app:layout_constraintVertical_bias="0.766" />

</android.support.constraint.ConstraintLayout>