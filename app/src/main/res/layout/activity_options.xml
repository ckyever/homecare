<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".options.OptionActivity">

    <TextView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:gravity="center_vertical"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/optionsText"
        android:layout_width="0sp"
        android:layout_height="50sp"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:gravity="center_vertical"
        android:text="Options"
        android:textAlignment="center"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="20sp"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/optionHelp"
        app:layout_constraintStart_toEndOf="@id/optionMenu" />

    <TextView
        android:id="@+id/changeImage"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Profile image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingStart="10sp"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:onClick="onClick"
        app:layout_constraintTop_toBottomOf="@id/titleBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/changeEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="92dp"
        android:background="@android:color/white"
        android:onClick="onClick"
        android:paddingBottom="15sp"
        android:paddingStart="10sp"
        android:paddingTop="15sp"
        android:text="Update Email Address"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleBar" />

    <TextView
        android:id="@+id/changePassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="174dp"
        android:background="@android:color/white"
        android:onClick="onClick"
        android:paddingBottom="15sp"
        android:paddingStart="10sp"
        android:paddingTop="15sp"
        android:text="Update Password"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleBar" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/changeImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_marginEnd="10sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        app:srcCompat="@android:drawable/ic_media_play"
        app:layout_constraintEnd_toEndOf="@id/changeImage"
        app:layout_constraintTop_toTopOf="@id/changeImage"
        app:layout_constraintBottom_toBottomOf="@id/changeImage" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/changeEmailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_marginEnd="10sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        app:srcCompat="@android:drawable/ic_media_play"
        app:layout_constraintEnd_toEndOf="@id/changeEmail"
        app:layout_constraintTop_toTopOf="@id/changeEmail"
        app:layout_constraintBottom_toBottomOf="@id/changeEmail" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/changePasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_marginEnd="10sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        app:srcCompat="@android:drawable/ic_media_play"
        app:layout_constraintEnd_toEndOf="@id/changePassword"
        app:layout_constraintTop_toTopOf="@id/changePassword"
        app:layout_constraintBottom_toBottomOf="@id/changePassword" />

    <Button
        android:id="@+id/optionMenu"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:paddingStart="5sp"
        android:paddingEnd="10sp"
        android:layout_marginStart="5sp"
        android:background="@color/background"
        android:drawableLeft="@drawable/ic_menu_home"
        android:drawableTint="@color/blue"
        android:drawablePadding="5sp"
        android:onClick="onClick"
        android:text="Menu"
        android:textColor="@color/blue"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/titleBar"
        app:layout_constraintTop_toTopOf="@id/titleBar"
        app:layout_constraintBottom_toBottomOf="@id/titleBar"/>

    <Button
        android:id="@+id/optionHelp"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:paddingStart="5sp"
        android:paddingEnd="10sp"
        android:layout_marginEnd="5sp"
        android:background="@color/emergencyBackground"
        android:drawableLeft="@drawable/bell_resized"
        android:drawableTint="@color/emergencyText"
        android:drawablePadding="5sp"
        android:onClick="onClick"
        android:text="Help !"
        android:enabled="false"
        android:textColor="@color/emergencyText"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/titleBar"
        app:layout_constraintTop_toTopOf="@id/titleBar"
        app:layout_constraintBottom_toBottomOf="@id/titleBar"/>

</android.support.constraint.ConstraintLayout>