<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".options.OptionActivity">

    <TextView
        android:id="@+id/optionsText"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:text="Options"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/changeImage"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Profile image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingStart="10sp"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:onClick="onClick"
        app:layout_constraintTop_toBottomOf="@id/optionsText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/changeImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_marginEnd="10sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        app:srcCompat="@android:drawable/ic_media_play"
        app:layout_constraintEnd_toEndOf="@id/changeImage"
        app:layout_constraintTop_toTopOf="@id/changeImage"
        app:layout_constraintBottom_toBottomOf="@id/changeImage" />

    <Button
        android:id="@+id/optionHelp"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:background="#FF0000"
        android:onClick="onClick"
        android:text="Help Me!"
        android:enabled="false"
        android:visibility="invisible"
        android:textColor="#FFFF00"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/optionsText"
        app:layout_constraintTop_toTopOf="@id/optionsText"
        app:layout_constraintBottom_toBottomOf="@id/optionsText"/>

</android.support.constraint.ConstraintLayout>