<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".communication.ChatActivity"
    tools:layout_editor_absoluteY="25dp"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/contactName"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:text="Contact Name"
        android:textFontWeight="25sp"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/msgView"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:dividerHeight="5sp"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@id/contactName"
        app:layout_constraintBottom_toTopOf="@id/textInputs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:transcriptMode="alwaysScroll"/>

    <Button
        android:id="@+id/sendMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send\nMessage"
        android:onClick="onClick"
        android:textSize="15sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/textInputs"
        android:layout_width="0sp"
        android:layout_height="45sp"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginBottom="5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sendMsg"
        android:hint="Write your message"
        android:background="@android:color/white"/>

    <Button
        android:id="@+id/optionHelp"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:background="#FF0000"
        android:onClick="onClick"
        android:text="Help Me!"
        android:enabled="false"
        android:visibility="invisible"
        android:textColor="#FFFF00"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/contactName"
        app:layout_constraintTop_toTopOf="@id/contactName"
        app:layout_constraintBottom_toBottomOf="@id/contactName"/>

</android.support.constraint.ConstraintLayout>

