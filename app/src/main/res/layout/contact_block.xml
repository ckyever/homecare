<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/username"
        android:textColor="@color/blue"
        android:textAlignment="textStart"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/userImage"
        android:background="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/contactEmail"
        android:layout_width="0sp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="10sp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/userImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username" />

    <TextView
        android:id="@+id/spacing"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/username"
        app:layout_constraintBottom_toBottomOf="@id/contactEmail"/>

    <TextView
        android:id="@+id/spacing2"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contactEmail"
        app:layout_constraintBottom_toBottomOf="@id/chatButton"/>

    <TextView
        android:id="@+id/spacing3"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/white"
        android:textSize="5sp"
        app:layout_constraintTop_toBottomOf="@id/chatButton"/>

    <Button
        android:id="@+id/chatButton"
        android:text="Chat"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_perm_group_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/round_button_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contactEmail"
        app:layout_constraintStart_toEndOf="@id/VideoCallButton" />

    <Button
        android:id="@+id/VoiceCallButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:layout_marginBottom="10sp"
        android:text="Call"
        android:textSize="20sp"
        android:background="@drawable/round_button_grey"
        android:drawableLeft="@drawable/ic_perm_group_phone_calls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/VideoCallButton"
        app:layout_constraintTop_toBottomOf="@id/contactEmail" />

    <Button
        android:id="@+id/VideoCallButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:layout_marginBottom="10sp"
        android:text="Video"
        android:textSize="20sp"
        android:background="@drawable/round_button_grey"
        android:drawableLeft="@drawable/presence_video_resized"
        android:drawableTint="@color/button_outline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contactEmail" />

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="10sp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/contactEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/username"
        app:srcCompat="@mipmap/ic_launcher_round" />

</android.support.constraint.ConstraintLayout>

