<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.sayyaf.homecare.options.UpdatePasswordActivity">

    <!--<android.support.v7.widget.RecyclerView
        android:id="@+id/rvContacts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" /> -->

    <TextView
        android:id="@+id/titleBarUpdatePassword"
        android:layout_width="0sp"
        android:layout_height="50sp"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:gravity="center_vertical"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/UpdatePasswordTitle"
        android:layout_width="0sp"
        android:layout_height="50sp"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:gravity="center_vertical"
        android:text="@string/update_password_title"
        android:textAlignment="center"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="25sp"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/optionHelpUpdatePassword"
        app:layout_constraintStart_toEndOf="@id/optionMenuUpdatePassword" />


    <EditText
        android:id="@+id/currentPasswordUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:hint="current"
        android:inputType="textPassword"
        android:nextFocusDown="@+id/passwordEditText"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256" />

    <EditText
        android:id="@+id/newPasswordUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:hint="@string/update_password_new"
        android:inputType="textPassword"
        android:nextFocusDown="@+id/passwordEditText"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentPasswordUpdate"
        app:layout_constraintVertical_bias="0.105" />

    <EditText
        android:id="@+id/confirmPasswordUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"
        android:hint="@string/register_confirm_password"
        android:inputType="textPassword"
        android:nextFocusDown="@+id/passwordEditText"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPasswordUpdate"
        app:layout_constraintVertical_bias="0.120000005"  />

    <Button
        android:id="@+id/updatePasswordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_button_accented"
        android:drawableLeft="@drawable/ic_update"
        android:drawablePadding="-28dp"
        android:padding="14dp"
        android:text="Update Password"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordUpdate" />


    <Button
        android:id="@+id/optionMenuUpdatePassword"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:paddingStart="5sp"
        android:paddingEnd="10sp"
        android:layout_marginStart="5sp"
        android:background="@color/background"
        android:drawableLeft="@drawable/ic_options"
        android:drawableTint="@color/blue"
        android:drawablePadding="5sp"
        android:onClick="onClick"
        android:text="@string/options_page"
        android:textColor="@color/blue"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/titleBarUpdatePassword"
        app:layout_constraintTop_toTopOf="@id/titleBarUpdatePassword"
        app:layout_constraintBottom_toBottomOf="@id/titleBarUpdatePassword"/>

    <Button
        android:id="@+id/optionHelpUpdatePassword"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:paddingStart="5sp"
        android:paddingEnd="10sp"
        android:layout_marginEnd="5sp"
        android:background="@color/emergencyBackground"
        android:drawableLeft="@drawable/bell_resized"
        android:drawableTint="@color/emergencyText"
        android:drawablePadding="5sp"
        android:onClick="onClick"
        android:text="@string/help"
        android:enabled="false"
        android:textColor="@color/emergencyText"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/titleBarUpdatePassword"
        app:layout_constraintTop_toTopOf="@id/titleBarUpdatePassword"
        app:layout_constraintBottom_toBottomOf="@id/titleBarUpdatePassword"/>

</android.support.constraint.ConstraintLayout>