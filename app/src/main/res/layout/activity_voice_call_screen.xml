<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/remoteUserVoice"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginBottom="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_gravity="center_horizontal"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:textAlignment="center"
            android:background="@color/colorAccent"
            android:text="@string/sample_call_name"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="28sp"/>

        <TextView
            android:id="@+id/callStateVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/call_status"
            android:textAllCaps="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/callDurationVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/call_duration"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/profileImageVoice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="0dp"
        android:layout_weight="3"
        android:contentDescription="Call background"
        app:srcCompat="@mipmap/ic_launcher_round">

    </ImageView>

    <RelativeLayout
        android:id="@+id/bottomPanelVoice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:background="@color/colorPrimary"
        android:layout_weight="1">
        <Button
            android:id="@+id/hangupButtonVoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingStart="90sp"
            android:paddingEnd="100sp"
            android:background="@drawable/round_button_accented"
            android:backgroundTint="#DC143C"
            android:paddingBottom="20dp"
            android:drawableLeft="@drawable/ic_hangup"
            android:drawablePadding="10sp"
            android:drawableTint="@android:color/white"
            android:text= "@string/end_call"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:paddingTop="20dp" />

    </RelativeLayout>

</LinearLayout>